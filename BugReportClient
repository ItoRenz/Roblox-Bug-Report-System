-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• COMPACT CONTENT â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local contentFrame = Instance.new("Frame")
contentFrame.Name = "Content"
contentFrame.Size = UDim2.new(1, -scale.PADDING * 2, 1, -scale.HEADER_HEIGHT - scale.PADDING * 2)
contentFrame.Position = UDim2.new(0, scale.PADDING, 0, scale.HEADER_HEIGHT + scale.PADDING)
contentFrame.BackgroundTransparency = 1
contentFrame.Parent = mainFrame

local instructionsLabel = Instance.new("TextLabel")
instructionsLabel.Size = UDim2.new(1, 0, 0, 18)
instructionsLabel.BackgroundTransparency = 1
instructionsLabel.Text = "Describe the issue"
instructionsLabel.TextSize = scale.LABEL_SIZE
instructionsLabel.Font = Enum.Font.GothamMedium
instructionsLabel.TextColor3 = COLORS.TEXT_SECONDARY
instructionsLabel.TextXAlignment = Enum.TextXAlignment.Left
instructionsLabel.Parent = contentFrame

local textBoxCard = Instance.new("Frame")
textBoxCard.Size = UDim2.new(1, 0, 0, scale.TEXTBOX_HEIGHT)
textBoxCard.Position = UDim2.new(0, 0, 0, 22)
textBoxCard.BackgroundColor3 = COLORS.CARD
textBoxCard.BorderSizePixel = 0
textBoxCard.BackgroundTransparency = 0
textBoxCard.Parent = contentFrame

local cardCorner = Instance.new("UICorner")
cardCorner.CornerRadius = UDim.new(0, 8)
cardCorner.Parent = textBoxCard

local cardStroke = Instance.new("UIStroke")
cardStroke.Color = COLORS.BORDER
cardStroke.Thickness = 1
cardStroke.Transparency = 0.5
cardStroke.Parent = textBoxCard

local textBox = Instance.new("TextBox")
textBox.Size = UDim2.new(1, -14, 1, -14)
textBox.Position = UDim2.new(0, 7, 0, 7)
textBox.BackgroundTransparency = 1
textBox.Text = ""
textBox.PlaceholderText = "When I press jump, character freezes..."
textBox.TextSize = scale.TEXT_SIZE
