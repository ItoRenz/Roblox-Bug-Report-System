textBox.MultiLine = true
textBox.ClearTextOnFocus = false
textBox.TextWrapped = true
textBox.Parent = textBoxCard

local counterContainer = Instance.new("Frame")
counterContainer.Size = UDim2.new(1, 0, 0, 18)
counterContainer.Position = UDim2.new(0, 0, 0, scale.TEXTBOX_HEIGHT + 26)
counterContainer.BackgroundTransparency = 1
counterContainer.Parent = contentFrame

local charCounter = Instance.new("TextLabel")
charCounter.Size = UDim2.new(0.5, 0, 1, 0)
