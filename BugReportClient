statusLabel.Parent = contentFrame

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• FUNCTIONS â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

textBox:GetPropertyChangedSignal("Text"):Connect(function()
    local length = string.len(textBox.Text)
    charCounter.Text = tostring(length) .. " / 750"
    
    if length > 750 then
        textBox.Text = string.sub(textBox.Text, 1, 750)
    end
    
    if length >= 15 then
        charCounter.TextColor3 = COLORS.SUCCESS
        minCharsLabel.TextColor3 = COLORS.SUCCESS
    else
        charCounter.TextColor3 = COLORS.TEXT_MUTED
        minCharsLabel.TextColor3 = COLORS.TEXT_MUTED
    end
end)

local function showPanel()
    mainFrame.Visible = true
    mainFrame:TweenPosition(
        UDim2.new(0.5, 0, 0, scale.PANEL_TOP),
        Enum.EasingDirection.Out,
        Enum.EasingStyle.Quad,
        0.4,
        true
    )
end

local function hidePanel()
    mainFrame:TweenPosition(
        UDim2.new(0.5, 0, 0, -500),
        Enum.EasingDirection.In,
        Enum.EasingStyle.Quad,
        0.3,
        true,
        function()
            mainFrame.Visible = false
            textBox.Text = ""
            statusLabel.Text = ""
            submitButton.BackgroundColor3 = COLORS.PRIMARY
        end
    )
end

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• EVENTS â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

openButton.MouseButton1Click:Connect(function()
    showPanel()
end)

closeButton.MouseButton1Click:Connect(function()
    hidePanel()
end)

submitButton.MouseButton1Click:Connect(function()
    local reportText = textBox.Text
    
    if reportText == "" or string.len(reportText) < 15 then
        statusLabel.TextColor3 = COLORS.SECONDARY
        statusLabel.Text = "âš  Min 15 chars!"
        
        local originalPos = textBoxCard.Position
        for i = 1, 3 do
            textBoxCard.Position = originalPos + UDim2.new(0, 4, 0, 0)
            wait(0.04)
            textBoxCard.Position = originalPos + UDim2.new(0, -4, 0, 0)
            wait(0.04)
        end
        textBoxCard.Position = originalPos
        return
    end
    
    submitButton.Active = false
    submitText.Text = "â³ SENDING"
    submitButton.BackgroundColor3 = COLORS.TEXT_MUTED
    
    sendBugReport:FireServer(reportText)
    
    wait(0.5)
    statusLabel.TextColor3 = COLORS.SUCCESS
    statusLabel.Text = "âœ“ Sent!"
    submitText.Text = "âœ“ SENT"
    submitButton.BackgroundColor3 = COLORS.SUCCESS
    
    wait(1.5)
    hidePanel()
    submitButton.Active = true
    submitText.Text = "ğŸ“¤ SUBMIT"
end)

openButton.MouseEnter:Connect(function()
    TweenService:Create(openButton, TweenInfo.new(0.2), {
        BackgroundColor3 = COLORS.PRIMARY_HOVER
    }):Play()
end)

openButton.MouseLeave:Connect(function()
    TweenService:Create(openButton, TweenInfo.new(0.2), {
        BackgroundColor3 = COLORS.PRIMARY
    }):Play()
end)

closeButton.MouseEnter:Connect(function()
    closeButton.BackgroundColor3 = COLORS.SECONDARY
    closeIcon.TextColor3 = COLORS.TEXT_PRIMARY
end)

closeButton.MouseLeave:Connect(function()
    closeButton.BackgroundColor3 = COLORS.CARD
    closeIcon.TextColor3 = COLORS.TEXT_SECONDARY
end)

submitButton.MouseEnter:Connect(function()
    if submitButton.Active then
        submitButton.BackgroundColor3 = COLORS.PRIMARY_HOVER
    end
end)

submitButton.MouseLeave:Connect(function()
    if submitButton.Active then
        submitButton.BackgroundColor3 = COLORS.PRIMARY
    end
end)

print("âœ“ Ultra Compact Bug Report - Center Top")
print("Platform:", isMobile and "Mobile" or "PC")
print("Author: ItoRenz")
